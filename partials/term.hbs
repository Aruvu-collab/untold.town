<div class="term">
  {{#is "tag"}}
    {{#tag}}
      <h1 class="term-name">{{name}}</h1>
      {{#if description}}
        <div class="term-description">{{description}}</div>
      {{/if}}
    {{/tag}}
  {{/is}}
  {{#is "author"}}
    {{#author}}
      <h1 class="term-name">{{name}}</h1>
      {{#if bio}}
        <div class="term-description">{{bio}}</div>
      {{/if}}
    {{/author}}
  {{/is}}
</div>